# =============================================
# Archer AI Engine Configuration
# =============================================

# Service Configuration
AI_SIDECAR_PORT=8000
API_PREFIX=/api/ai
LOG_LEVEL=INFO
ENVIRONMENT=development

# SurrealDB Configuration
SURREALDB_URL=ws://localhost:8000/rpc
SURREALDB_NS=archer
SURREALDB_DB=main
SURREALDB_USER=root
SURREALDB_PASS=root

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# LLM Configuration
LLM_PROVIDER=ollama  # Options: ollama, openai, anthropic
DEFAULT_MODEL=llama3.1
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=1536

# Ollama Configuration (Local LLMs)
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=300

# OpenAI Configuration
OPENAI_API_KEY=sk-...
OPENAI_ORG_ID=
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-opus-20240229

# Gemini Configuration
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-pro

# RAG Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_CONTEXT_LENGTH=4096
RETRIEVAL_TOP_K=5
SIMILARITY_THRESHOLD=0.7

# Ingestion Configuration
WATCH_DIRECTORIES=/data/documents,/data/kb
INGESTION_INTERVAL=300  # seconds
OCR_ENABLED=true
OCR_LANGUAGE=eng

# Security - HashiCorp Vault
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=
VAULT_NAMESPACE=
VAULT_MOUNT_POINT=secret

# Risk Assessment Thresholds
RISK_SCORE_LOW=0
RISK_SCORE_MEDIUM=30
RISK_SCORE_HIGH=60
RISK_SCORE_CRITICAL=80

# Approval Workflow
AUTO_EXECUTE_LOW_RISK=true
REQUIRE_APPROVAL_MEDIUM=true
REQUIRE_MULTI_APPROVAL_CRITICAL=true

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Celery Configuration (Job Queue)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=3600

# Token Limits & Rate Limiting
MAX_TOKENS_PER_REQUEST=4000
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_HOUR=100000

# Context Manager
CONTEXT_RECENT_TICKETS=5
CONTEXT_SIMILAR_THRESHOLD=0.8
CONTEXT_INCLUDE_ASSETS=true
CONTEXT_MAX_DEPTH=2

# Agent Timeouts
ORCHESTRATOR_TIMEOUT=30
LIBRARIAN_TIMEOUT=60
TICKET_ASSISTANT_TIMEOUT=45
MONITORING_TIMEOUT=90
OPERATIONS_TIMEOUT=120

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:1420,http://localhost:1421
ALLOW_CREDENTIALS=true

# Development Features
DEBUG_MODE=false
ENABLE_SWAGGER=true
RELOAD_ON_CHANGE=true
